<!DOCTYPE html>
<html>
  <head>
    <title>PlayingWithTddAndBdd</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div style="margin-bottom: 30px; float:right">
    <% if user_signed_in? %>
      <h4><%= link_to "Sign out", destroy_user_session_path, method: :delete %></h4>
      <h5>Logged in as <%= current_user.email %></h5>
    <% else %>
      <h4><%= link_to "Sign in", new_user_session_path %></h4>
      <h4><%= link_to 'Sign up', new_user_registration_path %></h4>
    <% end %>
  </div>

	  <p class="notice"><%= notice %></p>
	  <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
